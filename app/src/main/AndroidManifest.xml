<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.digivalet.brandresidential">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BrandResidential">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.com.digivalet.brandresidential"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="android:authorities">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/picker_provider_paths" />
        </provider>

        <activity
            android:name=".ui.fragments.profile.ProfileActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.fragments.residents.ResidentsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan"/>

        <activity
            android:name=".ui.fragments.residentdetails.ResidentDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan"/>

        <activity
            android:name=".ui.fragments.vehiclesdetails.VehiclesDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan"/>

        <activity
            android:name=".ui.fragments.staffdetails.StaffDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan"/>

        <activity
            android:name=".ui.fragments.frienddetails.FriendDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan"/>

        <activity
            android:name=".ui.fragments.petdetails.PetDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan"/>

        <activity
            android:name=".ui.fragments.guestsprofile.GuestsProfileActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan"/>

        <activity
            android:name=".ui.fragments.guestprofiledetails.GuestProfileDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan"/>

        <activity
            android:name=".ui.fragments.interests.InterestsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan"/>


        <activity
            android:name=".ui.fragments.guesthistory.GuestHistoryActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan"/>

        <activity
            android:name=".ui.fragments.guesthistorydetails.GuestHistoryDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan"/>

    </application>

</manifest>