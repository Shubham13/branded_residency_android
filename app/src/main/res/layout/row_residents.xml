<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/row_residents_item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/row_residents_item_card"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_160sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:id="@+id/row_residents_item_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_160sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:theme="@style/bodyBaselineSystemWhite"
            android:id="@+id/row_residents_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_residents_item_card"
            android:layout_alignStart="@+id/row_residents_item_card"
            android:layout_marginTop="@dimen/_10sdp" />

        <TextView
            android:theme="@style/subXxSmallSemiBrandAccent"
            android:id="@+id/row_residents_item_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_residents_item_name"
            android:layout_alignStart="@+id/row_residents_item_card"
            android:layout_marginTop="@dimen/_5sdp"
            android:lineSpacingExtra="@dimen/_3ssp"
            android:textAllCaps="true" />

    </RelativeLayout>
</layout>