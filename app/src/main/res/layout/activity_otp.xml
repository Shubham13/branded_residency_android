<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="otpVM"
            type="com.paragon.sensonic.ui.activities.otp.OtpViewModel" />
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp">

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_enter_code"
            style="@style/headlineH2SystemWhite"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/label_code_sent"
            style="@style/bodyBaselineRegBrandSecoundry"/>

        <TextView
            android:id="@+id/label_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_code_invalid"
            style="@style/subXSmallSystemRed"
            android:layout_marginTop="@dimen/_16sdp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <EditText
                android:id="@+id/otp_edit_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_26sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingBottom="@dimen/_26sdp"
                android:layout_weight="1"
                android:lines="1"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:nextFocusRight="@id/otp_edit_two"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:theme="@style/buttonNavTitleBrandSecoundryEditText"
                android:layout_marginEnd="@dimen/_10sdp"
                style="@style/darkLightFlatBorderRadius10"/>

            <EditText
                android:id="@+id/otp_edit_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_26sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:gravity="center"
                android:paddingBottom="@dimen/_26sdp"
                android:layout_weight="1"
                android:lines="1"
                android:maxLength="1"
                android:inputType="number"
                android:nextFocusRight="@id/otp_edit_three"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginEnd="@dimen/_10sdp"
                android:theme="@style/buttonNavTitleBrandSecoundryEditText"
                style="@style/darkLightFlatBorderRadius10"/>

            <EditText
                android:id="@+id/otp_edit_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_26sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:gravity="center"
                android:paddingBottom="@dimen/_26sdp"
                android:layout_weight="1"
                android:lines="1"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:theme="@style/buttonNavTitleBrandSecoundryEditText"
                android:layout_marginEnd="@dimen/_10sdp"
                style="@style/darkLightFlatBorderRadius10"/>

            <EditText
                android:id="@+id/otp_edit_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_26sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:gravity="center"
                android:paddingBottom="@dimen/_26sdp"
                android:layout_weight="1"
                android:lines="1"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:theme="@style/buttonNavTitleBrandSecoundryEditText"
                android:layout_marginEnd="@dimen/_10sdp"
                style="@style/darkLightFlatBorderRadius10"/>

            <EditText
                android:id="@+id/otp_edit_five"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_26sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:gravity="center"
                android:paddingBottom="@dimen/_26sdp"
                android:layout_weight="1"
                android:lines="1"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:theme="@style/buttonNavTitleBrandSecoundryEditText"
                android:layout_marginEnd="@dimen/_10sdp"
                style="@style/darkLightFlatBorderRadius10"/>

            <EditText
                android:id="@+id/otp_edit_six"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_26sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:gravity="center"
                android:paddingBottom="@dimen/_26sdp"
                android:layout_weight="1"
                android:lines="1"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:theme="@style/buttonNavTitleBrandSecoundryEditText"
                android:layout_marginEnd="@dimen/_10sdp"
                style="@style/darkLightFlatBorderRadius10"/>

        </LinearLayout>

        <TextView
            android:id="@+id/verify_btn"
            style="@style/brandAccentGradientRadius100"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:onClick="@{() -> otpVM.onClickVerify()}"
            android:text="@string/label_verify"
            android:textAppearance="@style/buttonLargeDarkDarkFlat" />

        <TextView
            android:id="@+id/resend_code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_resend_code"
            android:onClick="@{() -> otpVM.onClickResend()}"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            style="@style/buttonNavTitleBrandSecoundry"/>

    </LinearLayout>

</LinearLayout>
</layout>