<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_spinner_root"
        style="@style/darkDarkGradientRadius10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="start|center"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/row_spinner_title"
            style="@style/bodyBaselineSemiTitleSystemWhite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/row_time"
            style="@style/darkDarkGradientRadius10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingEnd="@dimen/_7sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:visibility="gone">

            <TextView
                android:id="@+id/edit_time"
                style="@style/bodySmallSemiTitleSystemWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/row_spinner_check_image"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@mipmap/ic_check_on"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@mipmap/ic_arrow"
            android:visibility="gone" />

    </LinearLayout>
</layout>