<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp">

        <TextView
            android:id="@+id/row_interest_header"
            style="@style/headlineH4SystemBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_12sdp" />

        <TextView
            android:id="@+id/label_all"
            style="@style/subXSmallSystemBlackAlpha30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:text="@string/label_all" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/row_interest_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_interest_header"
            android:layout_marginTop="@dimen/_10sdp"
            android:animateLayoutChanges="false"
            android:visibility="visible"
            app:singleSelection="false" />

    </RelativeLayout>
</layout>