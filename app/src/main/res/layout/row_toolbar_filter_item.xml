<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_toolbar_filter_item_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_6sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_6sdp">

        <ImageView
            android:id="@+id/row_toolbar_filter_item_icon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@mipmap/ic_calendar_history"
            android:visibility="gone" />

        <TextView
            android:textAppearance="@style/subXSmallMedSystemWhite"
            android:id="@+id/row_toolbar_filter_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/row_toolbar_filter_item_icon" />

        <ImageView
            android:id="@+id/row_toolbar_filter_item_dropdown_icon"
            android:layout_width="7dp"
            android:layout_height="4dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/row_toolbar_filter_item_title"
            android:src="@mipmap/ic_drop_down"
            android:visibility="gone" />

    </RelativeLayout>
</layout>