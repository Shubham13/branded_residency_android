<resources>
    <!-- Base application theme. -->
    <style name="BrandResidential" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/Tomato</item>
        <item name="colorPrimaryDark">@color/dark_background</item>
        <item name="colorAccent">@color/White</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@mipmap/ic_app_background</item>
    </style>

    <!--bottom navigation-->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textAppearance">@font/galaxie_copernicus_book</item>
    </style>

    <style name="TransparentDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!--dialog theme-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/brand_gradient_dark</item>
        <item name="colorControlNormal">@color/brand_gradient_dark</item>
    </style>

    <!--bottom sheet-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="BottomDiaologTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#767772</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:background">@drawable/bottom_dialog_rounded_corner_button_first</item>
    </style>

    <style name="ButtonDialogButtonText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BottomDialogButtonsSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#BABAB8</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>