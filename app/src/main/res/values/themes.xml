<resources>
    <!-- Base application theme. -->
    <style name="BrandResidential" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/Tomato</item>
        <item name="colorPrimaryDark">@color/dark_background</item>
        <item name="colorAccent">@color/White</item>
        <item name="android:windowBackground">@color/dark_background</item>
    </style>

    <!--bottom navigation-->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textAppearance">@font/galaxie_copernicus_book</item>
    </style>

    <style name="TransparentDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!--dialog theme-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/brand_gradient_dark</item>
        <item name="colorControlNormal">@color/brand_gradient_dark</item>
    </style>

    <!--bottom sheet-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>