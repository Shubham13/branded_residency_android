    <style name="systemWhiteBorderRadius10">
        <item name="android:background">@drawable/system_white_border_radius_10</item>
    </style>

    <style name="systemWhiteRadius10">
        <item name="android:background">@drawable/system_white_radius_10</item>
    </style>

    <style name="systemWhiteRadius10Alpha30">
        <item name="android:background">@drawable/system_white_radius_10_alpha_30</item>
    </style>


    <style name="brandAccentRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray_gray</item>
        <item name="colorControlActivated">@color/brand_accent</item>
    </style>

    <style name="brandAccentEditText">
        <item name="colorControlNormal">@color/brand_accent</item>
        <item name="colorControlActivated">@color/brand_accent</item>
        <item name="colorControlHighlight">@color/brand_accent</item>
    </style>

    <style name="brandAccentDarkCheckBox">
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="colorControlActivated">@color/brand_gradient_dark</item>
    </style>

