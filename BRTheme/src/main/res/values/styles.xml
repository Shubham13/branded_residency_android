    <style name="grayLighterRadius10">
        <item name="android:background">@drawable/gray_lighter_radius_10</item>
    </style>

    <style name="systemBlackAlpha20">
        <item name="android:background">@color/system_black</item>
        <item name="android:alpha">0.2</item>
    </style>

    <style name="brandAccent10Pill">
        <item name="android:background">@drawable/brand_accent_10_pill</item>
    </style>

    <style name="brandGradientPill">
        <item name="android:background">@drawable/brand_gradient_pill</item>
    </style>

    <style name="brandGradientCircle">
        <item name="android:background">@drawable/brand_gradient_circle</item>
    </style>

    <style name="brandGradientRadius10">
        <item name="android:background">@drawable/brand_gradient_radius_10</item>
